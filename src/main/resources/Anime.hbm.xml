<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="ru.kirill98.animeDB.entity.Anime" table="anime">
        <id column="uuid" name="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property column="en_anime_name" name="enAnimeName" type="java.lang.String"/>
        <property column="ru_anime_name" name="ruAnimeName" type="java.lang.String"/>
        <property column="genre" name="genre" type="java.lang.String"/>
        <property column="announced_episodes" name="announcedEpisodes" type="java.lang.Integer"/>
        <property column="released_episodes" name="releasedEpisodes" type="java.lang.Integer"/>
        <property column="is_finished" name="isFinished" type="java.lang.Boolean"/>
        <property column="published" name="published" type="java.lang.String"/>
        <property column="started" name="started" type="java.util.Date"/>
        <property column="description" name="description" type="java.lang.String"/>


    </class>
</hibernate-mapping>